<div class="actions">
  <span class={{startButtonClass}} {{action "startSingleBuild" "START"}}>
    {{fa-icon "play-circle-o" fixedWidth=true title="Start a new build."}}
  </span>
  <span class={{stopButtonClass}} {{action "stopBuild"}}>
    {{fa-icon "stop-circle-o" fixedWidth=true title="Stop build."}}
  </span>
  <span class={{startButtonClass}} {{action "startSingleBuild" "RESTART"}}>
    {{fa-icon "repeat" fixedWidth=true title="Restart from latest build."}}
  </span>
</div>